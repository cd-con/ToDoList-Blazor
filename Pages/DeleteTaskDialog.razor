@using MudBlazor

<DialogTitle>Удалить задачу</DialogTitle>

<DialogContent>
    <MudText>Вы уверены, что хотите удалить задачу: <b>@Task?.Title</b>?</MudText>
</DialogContent>

<DialogActions>
    <MudButton OnClick="Cancel">Отменить</MudButton>
    <MudButton OnClick="Delete" Color="Color.Error">Удалить</MudButton>
</DialogActions>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public TaskModel Task { get; set; }

    private void Cancel() => MudDialog.Cancel();

    private void Delete()
    {
        MudDialog.Close(DialogResult.Ok(Task));
    }
}
